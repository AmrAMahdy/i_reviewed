<div class="note">
  <div>
    <%= content_tag :span, "#{note.title} (#{time_ago_in_words note.created_at}) age", class: "note-title" %>
    <%= link_to 'Delete Note', [@book, note], method: :delete, data: {confirm: "Sure?"} %>
  </div>
  <div>
    <%= simple_format "#{note.note}" %>
  </div>
</div>
